<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tool:contetext=".Encuesta"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lyControles">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(SÓLO SI NO SE REALIZÓ LA TRANSACCIÓN) ¿Por qué no se pudo realizar la transacción?"
                android:id="@+id/tvPregunta" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/lyOpenClose">

                    <RadioGroup
                        android:id="@+id/rgOpt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_above="@+id/fbplacename"
                        android:visibility="visible"
                        android:clickable="true">

                        <RadioButton
                            android:id="@+id/rbA1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="a"
                            android:text="No había sistema" />

                        <RadioButton
                            android:id="@+id/rbB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No tenia fondo"
                            android:tag="b"
                            android:enabled="true" />


                        <RadioButton
                            android:id="@+id/rbC1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No cuenta con el equipo celular"
                            android:tag="c"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbD1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No cuenta con la clave para operar equipo"
                            android:tag="d"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbE1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La persona que atiende (operador) no estaba disponible o capacitado"
                            android:tag="e"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbF1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indicaron que no son agentes BIM"
                            android:tag="f"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbG1"
                            android:layout_width="wrap_content"
                            android:tag="g"
                            android:layout_height="wrap_content"
                            android:text="Otros" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:inputType="textCapCharacters"
                            android:ems="10"
                            android:enabled="true"
                            android:visibility="invisible"
                            style="@style/TextLogin"
                            android:lines="10"
                            android:scrollHorizontally="false"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            android:id="@+id/etComent1" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR ENCUESTA"
                android:id="@+id/btGuardar"
                android:drawableRight="@drawable/ic_sync"
                style="@style/BottonBase" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>


